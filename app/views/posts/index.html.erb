<%= stylesheet_link_tag("post")%>
<p style="color: green"><%= notice %></p>

<% content_for :title, "Post" %>

<div style="text-align: center;">
  <%= image_tag '7C Mammoth Vector.png', alt: '7C Mammoth Vector', style: 'width: 35%; height: auto;' %>
</div>


<div id="posts" class="posts-grid">
  

  <% @posts.each do |post| %>

    <%= render post %>



  <% end %>
</div>
<% if user_l_signed_in? %>
  <%= link_to "New post", new_post_path %>
<% end %>
